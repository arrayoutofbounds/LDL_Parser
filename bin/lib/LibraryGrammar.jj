// root non terminal. The content method leads to the rest of the file.
void Library() :{int count = 0;}
{ (< LIBRARY >{count++;} <WORD > <LB > Content() <RB >)* <EOF > {
   if (count > 1)   {
     throw new ParseException("Sorry, but you cannot have more than one LIBRARY in a input file");
   } }}

// ANY ORDER. This has all the top level non terminals
void Content() :{
  // counters for each of the methods below.
  int website_count,building_count,timeofyear_count,staff_count,bookcollection_count;
  website_count = 0;
  building_count = 0;
  timeofyear_count = 0;
  staff_count = 0;
  bookcollection_count = 0;
  }
{	(
	  Website(){ // website 
	    website_count++;
	    if (website_count > 1) // greater than 1 hence not allowed	    {			throw new ParseException("Sorry, you cannot have more than one website entry");
	    }
	  } |
	  Building(){ // building
	    building_count++;
	    if (building_count > 1) // greater than one hence not allowde	    {			throw new ParseException("Sorry, you cannot have more than one building entry");
	    }
	  } |
	  TimeofYear(){timeofyear_count++;} | // time of the year
	  Staff(){staff_count++;} | // staff
	  BookCollection(){bookcollection_count++;} // book collection
	)+

	// check in the end to ensure that there is one of website and building only. And one or more of the rest.
	{		if(website_count != 1)		{			throw new ParseException("Sorry, you must have ONE website entry");
		}
		if(building_count != 1)
		{
			throw new ParseException("Sorry, you must have ONE building entry");
		}
		if(timeofyear_count < 1)
		{
			throw new ParseException("Sorry, you must have ATLEAST ONE time of year entry");
		}
		if(staff_count < 1)
		{
			throw new ParseException("Sorry, you must have ATLEAST ONE staff entry");
		}
		if(bookcollection_count < 1)
		{
			throw new ParseException("Sorry, you must have ONE book collection entry");
		}
	}
}

// book colleciton non terminal
void BookCollection() :{
	int book_entries = 0; // number of books
  }
{
  < BOOKCOLLECTION > <WORD >  <LB >
  (BookEntry(){book_entries++;})* // making it 0 or more. THis means that if there are less than 1 entry there will be an error.
  < RB >
  {
    if (book_entries < 1)    {
      throw new ParseException("Sorry, you must have ATLEAST ONE book entry in the collection");    }  }}

//ANY ORDER
void BookEntry() :{
	int titles = 0;
	int authors = 0;
  }
{
  < BOOK >  bookid() <LB >
   (     Title()     {
       titles++;
       if (titles >1)       {
         throw new ParseException("Sorry you cannot have more than ONE title");       }
     } |
   	 Author()   	 {
   	   authors++;   	 }
   )*
  < RB >
  {
    if (titles != 1)    {
      throw new ParseException("Sorry you must have EXACTLY ONE title");    }
    if(authors <1)    {
      throw new ParseException("Sorry you must have ATLEAST ONE author");    }  }}


void bookid() : {Token t;}
{
  <BOOK_DIGIT > | (t = <AUTHOR_NAME >  {
    if((t.image).length() != 8)    {
      throw new ParseException("Must have a book id that is 8 chars long only");    }  }
  )}

void Author() :{}
{
  < AUTHOR > <QUOTE > ( <AUTHOR_NAME > <COMMA > (<AUTHOR_NAME > | < INITIAL >)+) <QUOTE > }

void Title() :{}
{
  < TITLE > Book_Title()}

void Book_Title() :{}
{
  < BOOK_TITLE > | < WORD >}

// IN ANY ORDER
void Staff() :{
  int position = 0;
  int email = 0;
  int type = 0;
  int rate = 0;
  }
{
  < STAFF ><WORD > <LB >
  (
  Position(){
    position++;
    if (position > 1)    {
      throw new ParseException("Sorry, you cannot have more than ONE position");    }
   } |
  Email(){email++;} |
  Type(){
    type++;
    if (type > 1)    {
      throw new ParseException("Sorry, you cannot have more than ONE type");    }
   } |
  Rate(){
    rate++;
	if (rate > 1)	{
	  throw new ParseException("Sorry, you cannot have more than ONE rate");	}
   }
  )+
  < RB >
  {
    if (position != 1)    {
      throw new ParseException("Sorry, you must have EXACTLY ONE position");    }
    if (type != 1)
    {
      throw new ParseException("Sorry, you must have EXACTLY ONE type");
    }
    if (rate != 1)
    {
      throw new ParseException("Sorry, you must have EXACTLY ONE rate");
    }
    if(email<1)    {
      throw new ParseException("Sorry, you must have ATLEAST ONE email");    }  }
}

